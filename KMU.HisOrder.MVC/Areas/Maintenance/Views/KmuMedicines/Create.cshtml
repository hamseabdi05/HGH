@model KMU.HisOrder.MVC.Models.KmuMedicine

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create";
}

<link href="~/css/style.css" rel="stylesheet" />

<div style="padding:10px;">
    <h4>Create new medicine.</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form id="MedCreateForm" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <font color="red">*</font>
                    <label asp-for="MedType" class="control-label"></label>
                    @* <input asp-for="MedType" class="form-control" />*@
                    <select asp-for="MedType" class="form-control" required="">
                        <option value=""></option>
                        <option value="1">Oral</option>
                        <option value="2">Injection</option>
                        <option value="3">External</option>
                    </select>
                    <span asp-validation-for="MedType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <font color="red">*</font>
                    <label asp-for="GenericName" class="control-label"></label>
                    <input asp-for="GenericName" class="form-control" required="" maxlength="140" />
                    <span asp-validation-for="GenericName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <font color="red">*</font>
                    <label asp-for="BrandName" class="control-label"></label>
                    <input asp-for="BrandName" class="form-control" required="" maxlength="140" />
                    <span asp-validation-for="BrandName" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="UnitSpec" class="control-label"></label>
                            <input asp-for="UnitSpec" class="form-control" maxlength="20" />
                            <span asp-validation-for="UnitSpec" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="PackSpec" class="control-label"></label>
                            <input asp-for="PackSpec" class="form-control" maxlength="20" />
                            <span asp-validation-for="PackSpec" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="DefaultFreq" class="control-label"></label>
                            <input asp-for="DefaultFreq" class="form-control" maxlength="10" />
                            <span asp-validation-for="DefaultFreq" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="RefDuration" class="control-label"></label>
                            <input asp-for="RefDuration" class="form-control" />
                            <span asp-validation-for="RefDuration" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Remarks" class="control-label"></label>
                    <input asp-for="Remarks" class="form-control" maxlength="500" />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <font color="red">*</font>
                    Off/On
                    <select asp-for="Status" class="form-control" required="">
                        <option value="1">True</option>
                        <option value="2">False</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input id="MedSubmitBtn" type="submit" value="Create" class="btn btn-primary" style="width:140px; margin-right:10px;" />
                    <a class="btn btn-default" asp-action="Index" style="width:140px; float:right;">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#MedCreateForm').submit(function () {
                $('#MedSubmitBtn').prop('disabled', true);

                setTimeout(function () {
                    $('#MedSubmitBtn').prop('disabled', false);
                }, 3000);
            });
        })
    </script>
} 