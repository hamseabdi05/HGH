@model KMU.HisOrder.MVC.Models.KmuChart;

@using KMU.HisOrder.MVC.Models;
@using KMU.HisOrder.MVC.Areas.MedicalRecord.ViewModels;
@using KMU.HisOrder.MVC.Extesion;
@inject KMU.HisOrder.MVC.Models.KMUContext _context;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var Action = ViewData["Action"] as EnumClass.ActionCode?;
    var mrCreate = ViewData["mrCreate"] as MRCreateClass;
    var Title = ViewData["Title"] as string;

    var ncdTypes = _context.KmuCoderefs.Where(e => e.RefCodetype.Equals("ncd_types")).ToList();

    int Age = Model == null || !Model.ChrBirthDate.HasValue ? 0 : DateTime.Today.Year - Model.ChrBirthDate.Value.Year;
    List<int> AgeList = new List<int>();
    for (var i = 2; i <= 100; i++)
    {
        AgeList.Add(i);
    }

    #region Phone

    var NationalPhone = "";
    var AreaPhone = "";
    var MobilePhone = "";

    if (!string.IsNullOrWhiteSpace(Model.ChrMobilePhone))
    {
        var PhoneArr = Model.ChrMobilePhone.Split(' ');
        if (PhoneArr.Count() == 3)
        {
            NationalPhone = PhoneArr[0];
            AreaPhone = PhoneArr[1];
            MobilePhone = PhoneArr[2];
        }
        else if (PhoneArr.Count() == 2)
        {
            AreaPhone = PhoneArr[0];
            MobilePhone = PhoneArr[1];
        }
        else
        {
            MobilePhone = PhoneArr[0];
        }
    }

    #endregion
    #region
    var EmgNationalPhone = "";
    var EmgAreaPhone = "";
    var EmgMobilePhone = "";

    if (!string.IsNullOrWhiteSpace(Model.ChrContactPhone))
    {
        var EmgPhoneArr = Model.ChrContactPhone.Split(' ');
        if (EmgPhoneArr.Count() == 3)
        {
            EmgNationalPhone = EmgPhoneArr[0];
            EmgAreaPhone = EmgPhoneArr[1];
            EmgMobilePhone = EmgPhoneArr[2];
        }
        else if (EmgPhoneArr.Count() == 2)
        {
            EmgAreaPhone = EmgPhoneArr[0];
            EmgMobilePhone = EmgPhoneArr[1];
        }
        else
        {
            EmgMobilePhone = EmgPhoneArr[0];
        }
    }
    #endregion

    #region
    var EmgContractNameF = "";
    var EmgContractNameM = "";
    var EmgContractNameL = "";

    if (!string.IsNullOrWhiteSpace(Model.ChrEmgContact))
    {
        var EmgNameArr = Model.ChrEmgContact.Split(' ');
        if (EmgNameArr.Count() == 3)
        {
            EmgContractNameF = EmgNameArr[0];
            EmgContractNameM = EmgNameArr[1];
            EmgContractNameL = EmgNameArr[2];
        }
        else if (EmgNameArr.Count() == 2)
        {
            EmgContractNameF = EmgNameArr[0];
            EmgContractNameM = EmgNameArr[1];
        }
        else
        {
            EmgContractNameF = EmgNameArr[0];
        }
    }

    #endregion
}
