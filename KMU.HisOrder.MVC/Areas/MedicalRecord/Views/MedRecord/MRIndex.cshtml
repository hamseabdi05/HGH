                                        break;
                                    }

                                }
                            }

                            <label id="Lb_Birth" class="col-6 border-0 ptcard_text" style="font-size:13pt">@(Model.ChrBirthDate.HasValue ? Model.ChrBirthDate.Value.ToString("dd/MM/yyyy") : "")</label>
